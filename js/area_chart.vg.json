{
  "title": "Overseas Migrant Arrivals by Visa Grouping by Year Period",
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 475,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/kluk0007/kluk0007_Monash_FIT3179_A2/refs/heads/main/data/overseas_migrant_arrivals_by_visa_and_citizenship_groups.csv"
  },
  "transform": [
    {
      "fold": ["2018-19", "2022-23", "2023-24"],
      "as": ["YearPeriod", "Value"]
    },
    {
      "calculate": "datum.YearPeriod == '2018-19' ? '2019' : datum.YearPeriod == '2022-23' ? '2023' : datum.YearPeriod == '2023-24' ? '2024' : null",
      "as": "YearString"
    },
    {
      "calculate": "toDate(datum.YearString)",
      "as": "Year"
    },
    {
      "calculate": "{ 'Total permanent visas': 'Permanent Visa', 'Total temporary visas': 'Temporary Visa', 'New Zealand citizens (subclass 444)(c)': 'New Zealand Citizens', 'Australian citizens (no visa required)': 'Australian Citizens'}[datum['Visa groupings']]",
      "as": "VisaGroupDisplay"
    },
    {
      "filter": {
        "field": "Visa groupings",
        "oneOf": [
          "Total permanent visas",
          "Total temporary visas",
          "New Zealand citizens (subclass 444)(c)",
          "Australian citizens (no visa required)"
        ]
      }
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "Value",
          "as": "TotalValue"
        }
      ],
      "groupby": ["YearPeriod"]
    }
  ],
  "layer": [
    {
      "mark": {"type": "area", "line": true, "point": true},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "title": "Year (End of Annual Period)",
          "timeUnit": "year"
        },
        "y": {
          "aggregate": "sum",
          "field": "Value",
          "title": "Number of Arrivals (Thousand People)"
        },
        "color": {
          "field": "VisaGroupDisplay",
          "type": "nominal",
          "title": "Visa Group"
        },
        "tooltip": [
          {"field": "Visa groupings", "title": "Visa Group Display"},
          {"field": "YearPeriod", "title": " Year Period"},
          {"field": "TotalValue", "type": "quantitative", "title": "Total Arrivals (All Groups, Thousand People)"},
          {"field": "Value", "type": "quantitative", "title": "Arrivals (Thousand People)"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 100,
        "dy": 20,
        "fontSize": 20,
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value": 0}, 
        "y": {"value": 300}, 
        "text": {"value": "Most arrived migrants held temporary visas"}
      }
    }
  ]
}
