{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Overseas Migrant Arrivals (Thousand People) by Age Group, Gender, and Year Period",
  "width": 500,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/kluk0007/kluk0007_Monash_FIT3179_A2/refs/heads/main/data/overseas_migrant_arrivals_age_and_sex.csv"
  },
  "params": [
    {
      "name": "selectedYear",
      "value": "2018-2019",
      "bind": {
        "input": "select",
        "options": ["2018-2019", "2022-2023", "2023-2024"],
        "labels": ["2018-2019", "2022-2023", "2023-2024"],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "calculate": "datum.Age == '100+' ? 100 : toNumber(datum.Age)",
      "as": "AgeNum"
    },
    {
      "calculate": "datum.AgeNum >= 100 ? '100+' : (floor(datum.AgeNum / 10) * 10 + '-' + (floor(datum.AgeNum / 10) * 10 + 9))",
      "as": "AgeGroup"
    },
    {
      "fold": [
        "2018-2019 Males Thousand",
        "2018-2019 Females Thousand",
        "2022-2023 Males Thousand",
        "2022-2023 Females Thousand",
        "2023-2024 Males Thousand",
        "2023-2024 Females Thousand"
      ],
      "as": ["Category", "Count"]
    },
    {
      "calculate": "trim(split(datum.Category, ' ')[0])",
      "as": "Year"
    },
    {
      "calculate": "trim(split(datum.Category, ' ')[1])",
      "as": "Gender"
    },
    {
      "filter": "datum.Year == selectedYear"
    },
    {
      "calculate": "datum.Gender == 'Males' ? -datum.Count : datum.Count",
      "as": "CountSigned"
    }
  ],
  "encoding": {
    "y": {
      "field": "AgeGroup",
      "type": "ordinal",
      "title": "Age Group (Years Old)",
      "sort": [
        "0-9", "10-19", "20-29", "30-39", "40-49",
        "50-59", "60-69", "70-79", "80-89", "90-99", "100+"
      ]
    },
    "x": {
      "aggregate": "sum",
      "field": "CountSigned",
      "type": "quantitative",
      "title": "Overseas Migrant Arrivals (Thousand People)",
      "axis": {"format": "s"},
      "scale": {"domain": [-180, 180]}
    },
    "color": {
      "field": "Gender",
      "type": "nominal",
      "scale": {
        "domain": ["Males", "Females"],
        "range": ["#156ab0", "#f58d05"]
      },
      "legend": {"title": "Sex"}
    },
    "tooltip": [
      {
        "aggregate": "sum",
        "field": "Count",
        "type": "quantitative",
        "title": "Overseas Migrant Arrivals (Thousand People)"
      },
      {"field": "Gender", "type": "nominal"},
      {"field": "AgeGroup", "type": "ordinal"},
      {"field": "Year", "type": "nominal"}
    ]
  },
  "mark": "bar"
}
