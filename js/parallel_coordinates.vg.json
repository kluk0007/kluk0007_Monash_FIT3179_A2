{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/kluk0007/kluk0007_Monash_FIT3179_A2/refs/heads/main/data/characteristics_of_employment.csv"
  },
  "width": 600,
  "height": 400,
  "transform": [
    {"window": [{"op": "count", "as": "index"}]},
    {
      "fold": [
        "Total - Employees",
        "Total - Independent Contractor",
        "Total - Other Business Operators"
      ],
      "as": ["key", "value"]
    },
    {
      "joinaggregate": [
        {"op": "min", "field": "value", "as": "min"},
        {"op": "max", "field": "value", "as": "max"}
      ],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.value - datum.min) / (datum.max - datum.min)",
      "as": "norm_val"
    }
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {"x": {"field": "key", "type": "nominal"}}
    },
    {
      "mark": {"type": "line", "opacity": 0.4},
      "encoding": {
        "x": {"field": "key", "type": "nominal"},
        "y": {"field": "norm_val", "type": "quantitative", "axis": null},
        "color": {"field": "Country of birth", "type": "nominal"},
        "detail": {"field": "index"},
        "tooltip": [
          {"field": "Country of birth", "title": "Country"},
          {"field": "key", "title": "Category"},
          {"field": "value", "title": "Value"}
        ]
      }
    },
    {
      "encoding": {"x": {"field": "key", "type": "nominal"}},
      "layer": [
        {
          "mark": {"type": "tick", "color": "#999", "size": 8}
        }
      ]
    }
  ],
  "config": {
    "axisX": {
      "domain": false,
      "labelAngle": 0,
      "tickColor": "#ccc",
      "title": null
    },
    "view": {"stroke": null}
  }
}
