{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 500,
  "title": "Choropleth Map of Australian States",
  "data": {
    "url": "https://raw.githubusercontent.com/kluk0007/kluk0007_Monash_FIT3179_A2/refs/heads/main/js/ne_1_australia.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },
  "transform": [
    { "filter": "datum.properties.admin == 'Australia'" },
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "values": [
            { "state": "New South Wales", "value": 45 },
            { "state": "Victoria", "value": 60 },
            { "state": "Queensland", "value": 30 },
            { "state": "Western Australia", "value": 50 },
            { "state": "South Australia", "value": 40 },
            { "state": "Tasmania", "value": 25 },
            { "state": "Northern Territory", "value": 20 },
            { "state": "Australian Capital Territory", "value": 70 }
          ]
        },
        "key": "state",
        "fields": ["value"]
      }
    }
  ],
  "projection": { "type": "mercator" },
  "mark": { "type": "geoshape", "stroke": "white" },
  "encoding": {
    "color": {
      "field": "value",
      "type": "quantitative",
      "title": "Example Value",
      "scale": { "scheme": "blues" }
    },
    "tooltip": [
      { "field": "properties.name", "title": "State" },
      { "field": "value", "title": "Value" }
    ]
  }
}
