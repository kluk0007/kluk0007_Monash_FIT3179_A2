{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 500,
  "title": "Choropleth Map of Australian States",
  "data": {
    "url": "https://raw.githubusercontent.com/kluk0007/kluk0007_Monash_FIT3179_A2/refs/heads/main/js/ne_1_australia.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },
  "transform": [
    {"filter": "datum.properties.admin == 'Australia'"},
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/kluk0007/kluk0007_Monash_FIT3179_A2/refs/heads/main/data/net_overseas_migration_all_states_year_ending.csv",
          "format": {"type": "csv"}
        },
        "key": "state_full",
        "fields": ["value", "Time"]
      }
    },
    {
      "fold": ["NSW", "Vic", "Qld", "WA", "SA", "Tas", "NT", "ACT"], "as": ["state_abbreviation", "value"]},
    {
      "calculate": "datum.state_abbreviation == 'NSW' ? 'New South Wales' : datum.state_abbreviation == 'Vic' ? 'Victoria' : datum.state_abbreviation == 'Qld' ? 'Queensland' : datum.state_abbreviation == 'WA' ? 'Western Australia' : datum.state_abbreviation == 'SA' ? 'South Australia' : datum.state_abbreviation == 'Tas' ? 'Tasmania' : datum.state_abbreviation == 'NT' ? 'Northern Territory' : datum.state_abbreviation == 'ACT' ? 'Australian Capital Territory' : null",
      "as": "state_full"
    }
  ],
  "projection": { "type": "mercator" },
  "mark": { "type": "geoshape", "stroke": "white" },
  "encoding": {
    "color": {
      "field": "value",
      "type": "quantitative",
      "title": "Example Value",
      "scale": { "scheme": "blues" }
    },
    "tooltip": [
      { "field": "properties.name", "title": "State" },
      { "field": "value", "title": "Value" }
    ]
  }
}
